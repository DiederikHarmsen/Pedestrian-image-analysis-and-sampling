import math, random, os, glob
from PIL import Image, ImageStat


def brightness( im_file ):
   im = Image.open(im_file)
   stat = ImageStat.Stat(im)
   r,g,b = stat.mean
   print(r, " and " , g , "and", b)
   return math.sqrt(0.241*(r**2) + 0.691*(g**2) + 0.068*(b**2))



